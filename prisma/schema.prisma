generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id       Int     @id @default(autoincrement())
  title    String
  price    Decimal @db.Decimal(10, 2)
  image    String
  category String
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  username String? @unique
  password String?
  name     String?
  pfp      String?
}
